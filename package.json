{
  "name": "handler-mongoose",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "build": "npm run build:clean && npm run build:generate",
    "build:clean": "rm -rf ./build",
    "build:generate": "tsc --project ./tsconfig.build.json",
    "test": "jest --passWithNoTests --config=jest.json",
    "test:watch": "npm run test -- --watch",
    "test:ci": "jest --config=jest.ci.js",
    "test:integration": "jest --config=jest.in.js --coverage",
    "test:integration:watch": "jest --config=jest.in.js --watch",
    "test:integration:ci": "jest --config=jest.in.js --verbose",
    "test:functional": "jest --config=jest.fu.js --runInBand --detectOpenHandles --coverage; echo ''",
    "test:functional:watch": "jest --config=jest.fu.js --runInBand --detectOpenHandles --watch; echo ''",
    "test:functional:ci": "jest --config=jest.fu.js --runInBand --verbose --detectOpenHandles",
    "pretest:functional": "docker-compose up -d && sleep 30",
    "pretest:functional:watch": "docker-compose up -d && sleep 30",
    "posttest:functional": "docker-compose down -v",
    "posttest:functional:watch": "docker-compose down -v",
    "test:all": "npm run test && npm run test:integration && npm run test:functional",
    "lint": "npm run prettier && npm run lint:check",
    "lint:check": "tslint --project ./tsconfig.json --config ./tslint.json --format codeFrame",
    "lint:ci": "tslint --project ./tsconfig.json --config ./tslint.json --format codeFrame",
    "prettier": "prettier --config './.prettierrc' --write '.huskyrc' '.prettierrc' './**/*.{ts,tsx,js,jsx,json,md,scss,yml}'",
    "prettier:ci": "prettier --config './.prettierrc' --list-different '.huskyrc' '.prettierrc' './**/*.{ts,tsx,js,jsx,json,md,scss,yml}'",
    "coverage": "npm run coverage:clean && npm run coverage:generate",
    "coverage:clean": "rm -rf ./coverage",
    "coverage:generate": "jest --config=jest.json --coverage",
    "docs": "npm run docs:clean && npm run docs:generate",
    "docs:clean": "rm -rf ./docs",
    "docs:generate": "typedoc --options './typedoc.json' './src'"
  },
  "author": "joerg.mueller",
  "license": "proprietary",
  "dependencies": {
    "@types/async": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.5.1",
    "async": "^3.0.0",
    "dotenv": "^8.0.0",
    "events": "^3.0.0",
    "lodash": ">=4.17.13",
    "mongoose": "^5.7.5",
    "rxjs": "^6.5.2",
    "rxjs-observable": "0.0.7"
  },
  "devDependencies": {
    "@hapi/joi": "^15.0.0",
    "@types/hapi__joi": "^15.0.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.11",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^5.5.2",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.4.4"
  },
  "peerDependencies": {
    "@hapi/joi": "^15.0.0"
  }
}
